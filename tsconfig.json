{
  "compilerOptions": {
    "target": "ESNext",
    "module": "Node16",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "moduleResolution": "Node16"
  },
  "include": ["src", "jest.config.mjs"],
  "exclude": ["node_modules"]
}
